<div class="modal fade glass-modal" id="<%= locals.modalId %>" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" style="box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15)">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title text-danger">
          <i class="fas fa-exclamation-triangle me-2"></i> Confirm Deletion
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form action="/delete" method="post">
          <input type="hidden" name="blogId" value="<%= blog.id %>" />

          <!-- Warning Box - Subtler Red Glass Effect -->
          <div class="glass-card p-3 mb-4 bg-danger bg-opacity-10 border-start border-danger border-3">
            <div class="d-flex align-items-center">
              <i class="fas fa-exclamation-circle me-3 fs-4 text-danger opacity-75"></i>
              <div>
                <p class="mb-0 text-danger">
                  <strong>Warning:</strong> This action cannot be undone. All content will be permanently deleted.
                </p>
              </div>
            </div>
          </div>

          <!-- Blog Preview - Regular Glass Card -->
          <div class="glass-card p-3 mb-4">
            <h6 class="text-primary"><%= blog.blogTitle %></h6>
            <small class="text-muted">
              <i class="fas fa-user me-1"></i> <%= blog.firstName + " " + blog.lastName %>
            </small>
            <p class="mt-2 text-truncate"><%= blog.blogContent %></p>
          </div>

          <div class="modal-footer border-top-0 px-0 pb-0">
            <button type="button" class="btn btn-glass" data-bs-dismiss="modal">
              <i class="fas fa-times me-2"></i> Cancel
            </button>
            <button type="submit" class="btn btn-glass-danger">
              <i class="fas fa-trash me-2"></i> Delete Permanently
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>