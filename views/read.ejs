<%- include("partials/header.ejs", { currentPath: "/read", title: "Read Blogs"
}) %>

<div class="container" style="height: 80vh">
  <div class="d-flex justify-content-between align-items-center mb-5 py-3">
    <h1 class="display-5 fw-bold mb-0">Latest Posts</h1>
    <a href="/" class="btn btn-glass-primary px-4 py-2">
      <i class="fas fa-plus me-2"></i> New Post
    </a>
  </div>

  <div class="row g-4">
    <% locals.blogArray.forEach(element => { %>
    <div class="col-12 col-md-10 col-lg-8 mx-lg-auto col-xl-6 mx-xl-0">
      <div
        class="glass-card h-100 d-flex flex-column"
        data-bs-toggle="modal"
        data-bs-target="#editModal<%= element.id %>"
      >
        <!-- Card Header with Title and Date -->
        <div class="card-header bg-transparent border-0 pb-0">
          <div class="d-flex justify-content-between align-items-start mb-2">
            <h3 class="h5 fw-bold mb-0 text-truncate pe-2 text-primary">
              <%= element.blogTitle %>
            </h3>
            <hr />
          </div>
          <div class="d-flex align-items-center text-muted mb-3">
            <i class="fas fa-user-circle me-2"></i>
            <span><%= element.firstName + " " + element.lastName %></span>
          </div>
        </div>

        <!-- Card Body with Content -->
        <div class="card-body flex-grow-1 py-3">
          <div
            class="blog-content"
            style="
              display: -webkit-box;
              -webkit-line-clamp: 4;
              -webkit-box-orient: vertical;
              overflow: hidden;
              text-overflow: ellipsis;
            "
          >
            <%= element.blogContent %>
          </div>
        </div>

        <!-- Card Footer with Actions -->
        <div class="card-footer bg-transparent border-0 pt-0 pb-3">
          <div class="d-flex justify-content-between">
            <button
              class="btn btn-glass px-3 py-2"
              data-bs-toggle="modal"
              data-bs-target="#editModal<%= element.id %>"
            >
              <i class="fas fa-edit me-2"></i> Edit
            </button>

            <button
              class="btn btn-glass px-3 py-2 text-danger"
              data-bs-toggle="modal"
              data-bs-target="#deleteModal<%= element.id %>"
            >
              <i class="fas fa-trash me-2"></i> Delete
            </button>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>

<!-- Place all modals at the bottom, outside any containers -->
<% locals.blogArray.forEach(element => { %> <%-
include("partials/editModal.ejs", { blog: element, modalId: "editModal" +
element.id }) %> <%- include("partials/deleteModal.ejs", { blog: element,
modalId: "deleteModal" + element.id }) %> <% }); %> <%-
include("partials/footer.ejs") %>
