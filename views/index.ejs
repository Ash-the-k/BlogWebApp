<%- include("partials/header.ejs", { currentPath: "/" }) %>
<div class="container col-xl-10 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-lg-5 py-5">
    <div class="col-lg-7 text-center text-lg-start">
      <h1 class="display-4 fw-bold lh-1 text-body-emphasis mb-3">
        Welcome to Blogify
      </h1>
      <p class="col-lg-10 fs-4">
        A clean space for your ideas. This is a dynamic blog application built
        with Node.js and Express. Jump right in to create, edit, and manage your
        posts for this session.
      </p>
    </div>
    <div class="col-md-10 mx-auto col-lg-5">
      <form
        action="/submit"
        method="post"
        class="p-4 p-md-5 border rounded-3 bg-body-tertiary"
      >
        <h2><strong>Start Blogging</strong></h2>
        <div class="form-floating mb-3 mt-4">
          <input
            type="text"
            class="form-control"
            id="firstName"
            name="firstName"
            placeholder="John"
            autofocus
          />
          <label for="firstName">First Name</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="lastName"
            name="lastName"
            placeholder="Smith"
          />
          <label for="lastName">Last Name</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="blogTitle"
            name="blogTitle"
            placeholder="Smith"
          />
          <label for="lastName">Blog Title</label>
        </div>

        <div class="mb-3">
          <label for="blogBox" class="form-label">Write your Blog</label>
          <textarea
            class="form-control"
            id="blogBox"
            rows="5"
            placeholder="Blog Content"
            name="blogContent"
          ></textarea>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">
          Post Blog
        </button>
      </form>
    </div>
  </div>
</div>
<%- include("partials/footer.ejs") %>
