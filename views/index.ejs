<%- include("partials/header.ejs", { currentPath: "/", title: "Create a New Blog" }) %>
<div class="row align-items-center g-lg-5 py-5" style="min-height: 85vh;">
  <div class="col-lg-7 text-center text-lg-start">
    <h1 class="display-4 fw-bold lh-1 mb-3">
      Welcome to <span class="text-primary">Blogify</span>
    </h1>
    <p class="col-lg-10 fs-4">
      A modern space for your ideas. This sleek blog platform combines beautiful design with powerful functionality.
    </p>
    <div class="d-flex gap-3 mt-4">
      <a href="/read" class="btn btn-glass-primary px-4">
        <i class="fas fa-book-open me-2"></i> Read Blogs
      </a>
      <a href="/about" class="btn btn-glass px-4">
        <i class="fas fa-info-circle me-2"></i> Learn More
      </a>
    </div>
  </div>

  <div class="col-md-10 mx-auto col-lg-5 mt-5 mt-lg-0">
    <div class="glass-form floating">
      <h2 class="text-center mb-4"><strong>Start Blogging</strong></h2>
      
      <form action="/submit" method="post">
        <div class="form-floating mb-3">
          <input type="text" class="form-control glass-input" id="firstName" name="firstName" placeholder="John" required>
          <label for="firstName"><i class="fas fa-user me-2"></i>First Name</label>
        </div>

        <div class="form-floating mb-3">
          <input type="text" class="form-control glass-input" id="lastName" name="lastName" placeholder="Smith" required>
          <label for="lastName"><i class="fas fa-user me-2"></i>Last Name</label>
        </div>

        <div class="form-floating mb-3">
          <input type="text" class="form-control glass-input" id="blogTitle" name="blogTitle" placeholder="My Awesome Blog" required>
          <label for="blogTitle"><i class="fas fa-heading me-2"></i>Blog Title</label>
        </div>

        <div class="mb-3">
          <label for="blogBox" class="form-label"><i class="fas fa-edit me-2"></i>Your Blog Content</label>
          <textarea class="form-control glass-input" id="blogBox" rows="5" name="blogContent" required></textarea>
        </div>

        <button class="w-100 btn btn-glass-primary btn-lg" type="submit">
          <i class="fas fa-paper-plane me-2"></i> Publish Blog 
        </button>
      </form>
    </div>
  </div>
</div>

<%- include("partials/footer.ejs") %>